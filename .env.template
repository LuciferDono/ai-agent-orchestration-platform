# AI Agent Orchestration Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_orchestration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_orchestration
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8100
CHROMA_PERSIST_DIRECTORY=/chroma/chroma

# Alternative Vector Database (Pinecone)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX_NAME=ai-orchestration-index

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (for HITL notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=AI Agent Orchestration Platform

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# Monitoring & Observability
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
JAEGER_URL=http://localhost:16686
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# API Configuration
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Storage
STORAGE_TYPE=local  # local, s3, minio
STORAGE_PATH=/tmp/ai-orchestration-storage

# S3/MinIO Configuration (if using cloud storage)
S3_BUCKET_NAME=ai-orchestration-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_ENDPOINT_URL=  # Leave empty for AWS S3, set for MinIO

# Agent Configuration
DEFAULT_AGENT_TIMEOUT=300  # 5 minutes
MAX_AGENT_RETRIES=3
AGENT_MEMORY_LIMIT_MB=512
MAX_CONCURRENT_AGENTS=10

# Workflow Configuration
WORKFLOW_TIMEOUT=1800  # 30 minutes
MAX_WORKFLOW_DEPTH=10
CHECKPOINT_INTERVAL=60  # Save state every 60 seconds

# Human-in-the-Loop Configuration
HITL_APPROVAL_TIMEOUT=3600  # 1 hour
HITL_ESCALATION_TIMEOUT=7200  # 2 hours
HITL_NOTIFICATION_DELAY=300  # 5 minutes

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOW_CREDENTIALS=true
SECURE_COOKIES=false  # Set to true in production
SESSION_TIMEOUT=86400  # 24 hours

# Feature Flags
ENABLE_AGENT_REGISTRY=true
ENABLE_HITL_SERVICE=true
ENABLE_OBSERVABILITY=true
ENABLE_TOOL_INTEGRATION=true
ENABLE_WEB_UI=true

# Development Settings (only for development)
DEBUG=true
AUTO_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILER=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_orchestration_test
TEST_REDIS_URL=redis://localhost:6379/1

# Kubernetes/Container Settings (for production)
NAMESPACE=ai-orchestration
REPLICAS=3
RESOURCE_LIMITS_CPU=1000m
RESOURCE_LIMITS_MEMORY=1Gi
RESOURCE_REQUESTS_CPU=100m
RESOURCE_REQUESTS_MEMORY=128Mi

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Analytics & Metrics
ANALYTICS_ENABLED=true
METRICS_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# External Integrations
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
DISCORD_BOT_TOKEN=your-discord-bot-token
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# Custom Configuration
CUSTOM_AGENT_PATH=/custom/agents
CUSTOM_TOOLS_PATH=/custom/tools
CUSTOM_TEMPLATES_PATH=/custom/templates